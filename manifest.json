{
	"name": "Tangora Stig Link Dimmer",
	"description": "Stigs link dimmer",
	"version": "0.1",
	"permissions": [
		"activeTab",
		"storage",
		"webNavigation", 
		"*://*/*"
	],
	"background": {
		"scripts": [
		"background.js"
		],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Juicy"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"manifest_version": 2
}